extends ./layout.jade
block contenido
	div(class="col-md-4 col-lg-3 center-block no-float big-top-space")
		h1(class="bottom-space text-center") Login
		form(action="/users", method="POST")
			div(class="form-group")
				label(for="username") Username
				input(type="text", name="username", placeholder="Username", class="form-control" ,id="username")
			div(class="form-group")
				label(for="email") Email
				input(type="email", name="email", placeholder="Username", class="form-control" ,id="email")
			div(class="form-group")
				label(for="password") password
				input(type="password", name="password", placeholder="Contrase√±a", class="form-control", id="passowrd")
			div(class="form-group")
				label(for="password_confirmation") Confirmar password
				input(type="password", name="password_confirmation", placeholder="password_confirmation", class="form-control", id="password_confirmation")
			div(class="form-group")
				label(for="name") Nombre
				input(type="text", name="name", placeholder="name", class="form-control" ,id="name")
			div(class="form-group")
